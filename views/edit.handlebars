<div class="overlay">
  <img src="background5.jpg" alt="">
</div>
<h2>edit your profile</h2>
{{#if error}}
    <h2 id="error">CORRECT YOUR DATA</h2>
{{/if}}
<div class="inputbox" id="editbox">
  <form method="POST">
    <p>first name:</p>
    <input type="text" name="firstname" placeholder="enter your first name" value={{info.name}}>
    <p>last name:</p>
    <input type="text" name="lastname" placeholder="enter your last name" value={{info.lastname}}>
    <p>email:</p>
    <input type="text" name="email"  placeholder="enter email address" value={{info.email}}>
    <p>password:</p>
    <input type="password" name="password">
    <p>age:</p>
    <input type="text" name="age" placeholder="enter your age" value={{info.age}}>
    <p>city:</p>
    <input type="text" name="city" placeholder="enter your city" value={{info.city}}>
    <p>url:</p>
    <input type="url" name="url" value={{info.url}}>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <button type="submit" class="button">EDIT PROFILE</button>
  </form>
  <a href="/signed">go back</a>
</div>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="script.js" charset="utf-8"></script>

</html>
